!!!
%html{ lang: 'pl' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    %title= full_title(yield(:title))

  %body
    %header
      .jumbotron
        .container
          .row
            .col-md-10
              = link_to image_tag("logo.png", alt: "Radio Afera"), '#', id: "logo"
            .col-md-2
              = link_to image_tag("put_logo.png", alt: "Radio Afera"), 'www.put.poznan.pl', id: "put_logo"
          %nav.navbar
            %ul.nav.navbar-nav
              %li= link_to "Home", '#'
              %li= link_to "People", '#'
              %li= link_to "Aferzasta", '#'
              %li= link_to "Schedule", '#'
              %li= link_to "Music", '#'
              %li= link_to "Recording Studio", '#'
              %li= link_to "News", '#'
              %li= link_to "About", '#'
              %li= link_to "Contact", '#'
              %li= link_to "Advertising", '#'
              %li= link_to "PRA", '#'
              %li= link_to "Sign up", '#'
    .container
      = yield
